.ma-1
  margin 4px

.mx-2
  margin 0 8px

.mx-4
  margin 0 16px

.spacer
  flex-grow 2

.text-align-center
  text-align center

.top-right
  top 0
  right 0

.d-flex
  display flex !important

.flex-column
  flex-direction column

.justify-space-between
  justify-content space-between

.justify-end
  justify-content end

.justify-center
  justify-content center

.w-full
  width 100% !important

.mob-w-full
