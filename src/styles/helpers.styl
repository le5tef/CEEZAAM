@import './variables'
@import './variables'
@import './mixins'

.heading
  font-family Verdana
  font-weight 700
  color $cText
  margin-bottom 16px
  @media (max-width $tabletVerWidth)
    margin-left 16px

.size-18
  height 18px
  width 18px

.time-line
  background $cPrimary
  height 2px !important
  border-radius 50%
  position absolute
  left 0
  right 0
  z-index 1 !important

.debug
  debug()

.outline
  outline()

.pointer
  cursor pointer

.ws-normal
  white-space normal

.font-weight-700
  font-weight 700 !important

.primary-background
  background $cPrimary

.accent-background
  background $cAccent

.access-background
  background $cAccess

.is-hidden
  display none !important

.text-accent
  color $cAccent

.text-muted
  color $cTextMuted !important
  fill $cTextMuted !important

.primary-color
  color $cPrimary !important
  --color $cPrimary !important

.position-relative
  position relative

.position-absolute
  position absolute

.font-14
  font-size 14px
  line-height 16px

.font-18
  font-size 18px
  line-height 22px

.font-26
  font-size 26px
  line-height 28px

.pl-1
  padding-left 4px

.pa-1
  padding 4px

.pa-2
  padding 8px

.px-2
  padding 0 8px

.px-4
  padding 0 16px


.ml-1
  margin-left 4px

.ml-2
  margin-left 8px

.ml-4
  margin-left 16px

.mr-1
  margin-right 4px

.mr-2
  margin-right 8px

.mr-4
  margin-right 16px

.mt-1
  margin-top 4px

.mt-2
  margin-top 8px


.mt-4
  margin-top 16px

.mb-1
  margin-bottom 4px

.mb-4
